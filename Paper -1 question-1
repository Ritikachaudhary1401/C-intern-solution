#include <iostream>
#include<stdio.h>
#include<algorithm>
using namespace std;
int main()
{
    int n,i,a[100];
    printf("Enter the size of array:");
    scanf("%d",&n);
    
    printf("Enter the array: ");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
    }
    sort(a,a+n);
    printf("The smallest element is %d and \nThe Second smallest element is %d ",a[0],a[1]);
    return 0;
}
